<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <Button
        android:id="@+id/buttonAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="22sp"
        android:background="@drawable/filledbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum7"
        app:layout_constraintEnd_toStartOf="@+id/buttonDel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="15sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum3"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonMul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonPerc"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <Button
        android:id="@+id/buttonnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum0"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum1"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum5" />

    <Button
        android:id="@+id/buttonnum00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum1" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum6"
        app:layout_constraintTop_toBottomOf="@+id/buttonMul" />

    <Button
        android:id="@+id/buttonPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum9"
        app:layout_constraintEnd_toStartOf="@+id/buttonDiv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonDel"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <Button
        android:id="@+id/buttonnum0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonnumPoint"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum00"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum2" />

    <Button
        android:id="@+id/buttonnum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum00"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum4" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum9"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiv" />

    <Button
        android:id="@+id/buttonnum7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum4"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAC" />

    <Button
        android:id="@+id/buttonnumPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum0"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum3" />

    <Button
        android:id="@+id/buttonnum9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum6"
        app:layout_constraintEnd_toStartOf="@+id/buttonMul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum8"
        app:layout_constraintTop_toBottomOf="@+id/buttonPerc" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filledbtn"
            android:text="="
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonnumPoint"
            app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

    <Button
        android:id="@+id/buttonnum5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum2"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum4"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum8" />

    <Button
        android:id="@+id/buttonnum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnumPoint"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum2"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum6" />

    <Button
        android:id="@+id/buttonnum4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum1"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum7" />

    <Button
        android:id="@+id/buttonnum8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum5"
        app:layout_constraintEnd_toStartOf="@+id/buttonnum9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum7"
        app:layout_constraintTop_toBottomOf="@+id/buttonDel" />

    <Button
        android:id="@+id/buttonnum6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum3"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonnum5"
        app:layout_constraintTop_toBottomOf="@+id/buttonnum9" />

    <Button
        android:id="@+id/buttonDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âŒ« "
        android:textSize="22sp"
        android:background="@drawable/filledbtn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum8"
        app:layout_constraintEnd_toStartOf="@+id/buttonPerc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAC"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="188dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom|right"
        android:text=""
        android:textStyle="bold"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonnum5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInputExp"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="25sp"
        android:gravity="bottom|right"
        app:layout_constraintBottom_toBottomOf="@+id/tvResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>


